generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  addressId String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  address   Address   @relation(fields: [addressId], references: [id])
  customer  Customer?
  
  @@map("users")
}

model Address {
  id        String     @id @default(cuid())
  street    String
  city      String
  zipCode   String
  country   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  // Relations
  users     User[]
  
  @@map("addresses")
}

model Customer {
  id        String     @id @default(cuid())
  name      String
  phone     String
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  user      User       @relation(fields: [userId], references: [id])
  
  @@map("customers")
}

model Payment {
  id         String   @id @default(cuid())
  userId     String
  customerId String
  amount     Float
  status     String   // PENDING, COMPLETED, FAILED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("payments")
}
